<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="100.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="codename.controller.ClueAgentController">
    <children>
        <!-- Espacement gauche -->
        <Region prefWidth="50.0" />

        <!-- Contenu principal -->
        <VBox prefHeight="100.0" prefWidth="700.0" spacing="10">
            <children>
                <!-- Bandeau informatif -->
                <HBox prefHeight="50.0" spacing="20" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Indice : " prefWidth="100.0">
                            <font>
                                <Font size="20.0" />
                            </font>
                        </Label>
                        <Label fx:id="clueLabel" text="En attente..." prefWidth="400.0">
                            <font>
                                <Font size="20.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <!-- Bouton "Fin de tour" -->
                <HBox prefHeight="50.0" alignment="CENTER">
                    <children>
                        <Button fx:id="endTurnButton" text="Fin de tour" prefWidth="150.0" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Espacement droit -->
        <Region prefWidth="50.0" />
    </children>
</HBox>